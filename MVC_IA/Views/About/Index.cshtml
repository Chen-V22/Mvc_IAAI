@model IEnumerable<MVC_IA.Models.AboutUs>
@{
    ViewBag.Title = "Index";
}


<div id="banner-area" class="banner-area" style="background-image:url(/Content/Images/banner-bg.jpg)">
    <!-- Subpage title start -->
    <div class="banner-text text-right">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul class="breadcrumb">
                        <li>首頁</li>
                        <li>關於我們</li>
                        <li><a href="#"> @Html.Raw(ViewBag.Page)</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Subpage title end -->
</div>
<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">

            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

                <div class="sidebar sidebar-right">
                    <div class="widget">
                        <h2 class="widget-title"><i class="fa fa-folder-open-o">&nbsp;</i>關於我們</h2>
                        <ul class="arrow nav nav-tabs nav-stacked">
                            @{
                                int data = Convert.ToInt32(Session["About"]);
                                foreach (var item in Model)
                                {
                                    <li class ="@(item.Id==data?"active":"")"><a href="@Url.Action("Index","About",new {item.Id})">@item.PageList</a></li>
                                }
                            }
                            @*<li><a href="@Url.Action("Index", "About")">組織架構</a></li>
                            <li><a href="@Url.Action("Index", "About")">沿革</a></li>
                            <li><a href="@Url.Action("Index", "About")">配證會員</a></li>
                            <li><a href="@Url.Action("Index", "About")">專家介紹</a></li>*@
                        </ul>
                    </div><!-- Categories end -->

                </div><!-- Sidebar end -->
            </div><!-- Sidebar Col end -->

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">

                <h2 class="page-title">@Html.Raw(ViewBag.Page)</h2>
                <hr class="botmargin-min">

                <!-- 內容開始 -->

                <table class="table table-striped career-table about-table">
                    @Html.Raw(ViewBag.Content)
                </table>
                
                <!-- Content row 1 end -->
                <!-- 內容結束 -->

                <div class="tags-area clearfix">

                    <div class="share-items pull-right">
                        <ul class="post-social-icons unstyled">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>

            </div><!-- Content Col end -->


        </div><!-- Main row end -->

    </div><!-- Conatiner end -->
</section><!-- Main container end -->
