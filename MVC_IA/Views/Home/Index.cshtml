@using MVC_IA.Models

@{
    ViewBag.Title = "Home Page";
}

<div id="main-slide" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators visible-lg visible-md">
        @{
            int numberSort = 0;
            foreach (var bata in ViewBag.Home)
            {
                <li data-target="#main-slide" data-slide-to="@numberSort" class="@(numberSort==0?"active":"")"></li>
                numberSort++;
            }
        }

    </ol><!--/ Indicators end-->
    <!-- Carousel inner -->
    <div class="carousel-inner">
        @{
            int sortPicture = 0;
            foreach (var date in ViewBag.Home)
            {

                <div class="@(sortPicture== 0 ? "item active" : "item")" style="background-image: url(../upfile/images/@date.Picture)">
                </div>
                sortPicture++;
                <!--/ Carousel item end -->
            }
        }

        @*<div class="item" style="background-image: url(images/slider-main-02.jpg)">
            </div>*@<!--/ Carousel item end -->

    </div><!-- Carousel inner end-->
    <!-- Controllers -->
    <a class="left carousel-control" href="#main-slide" data-slide="prev">
        <span><i class="fa fa-angle-left"></i></span>
    </a>
    <a class="right carousel-control" href="#main-slide" data-slide="next">
        <span><i class="fa fa-angle-right"></i></span>
    </a>

    <span class="down-arrow-transparent"></span>

</div><!--/ Carousel end -->


<section id="news" class="news">
    <div class="container">

        <div class="row">
            @foreach (var item in ViewBag.News)
            {
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="latest-post">
                        <img class="img-responsive" src="~/upfile/images/@item.Photo" alt="img">
                        <div class="post-body">
                            <h4 class="post-title">
                                <a href="~/News/Show/@item.Id">@item.Title</a>
                            </h4>
                            <span class="post-item-date">
                                <i class="fa fa-clock-o"></i> @item.Date
                            </span>
                            <div class="post-text">
                                <p>@(item.Introduction)...</p>
                            </div>
                        </div>
                        <a href="~/News/Show/@item.Id" class="btn btn-primary">More</a>
                    </div><!-- Latest post end -->
                </div>
                <!-- 1st post col end -->
            }
        </div><!--/ Content row end -->
    </div><!--/ Container end -->
</section><!--/ News end -->

